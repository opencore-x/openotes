{
  "name": "openotes-mcp-server",
  "version": "0.1.0",
  "description": "MCP server that bridges AI agents with your markdown knowledge base",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "openotes": "./bin/openotes"
  },
  "files": [
    "build",
    "bin",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc -p scripts/tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "setup": "node build/scripts/setup.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .ts",
    "clean": "rm -rf build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "markdown",
    "notes",
    "ai",
    "knowledge-base",
    "obsidian"
  ],
  "author": "openotes",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}